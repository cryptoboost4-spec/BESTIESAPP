{
  "name": "besties-functions",
  "version": "1.0.0",
  "description": "Besties Cloud Functions",
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "verify-config": "node -e \"const {verifyConfig, getConfigReport} = require('./utils/verifyConfig'); console.log(getConfigReport()); process.exit(verifyConfig().valid ? 0 : 1);\""
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "twilio": "^4.20.0",
    "@sendgrid/mail": "^7.7.0",
    "stripe": "^14.10.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  },
  "private": true
}
